    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#F44336</item>
        <item name="android:fontFamily">@font/bevietnam_regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>
    <style name="EditTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:fontFamily">@font/bevietnam_regular</item>
        <item name="android:background">@drawable/rounded_white_opacity_30</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">@color/txtColor_1E3C1E</item>
        <item name="android:textColorHint">@color/txtColor_1E3C1E</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="NavigationTab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
    </style>

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/bevietnam_semi_bold</item>
        <item name="android:textSize">12sp</item>
    </style>



</resources>